{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@config/*": [
        "./config/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
      "@errors/*": [
        "./errors/*"
      ],
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  }
}